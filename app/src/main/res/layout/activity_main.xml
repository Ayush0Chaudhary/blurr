<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="1dp">
        <!-- Image of Panda in Superman Pose -->
<!--        <ImageView-->
<!--            android:id="@+id/pandaImage"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:adjustViewBounds="true"-->
<!--            android:layout_marginBottom="16dp"-->
<!--            android:src="@drawable/panda_image2"/>-->
        <EditText
            android:id="@+id/contentMoniterInputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/write_things_you_want_to_avoid"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="@drawable/rounded_background"/>

        <!-- Perform Task Button -->
        <TextView
            android:id="@+id/contentMoniterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_filtering"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:background="@drawable/rounded_button"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Input Field -->
        <EditText
            android:id="@+id/inputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_the_task"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="@drawable/rounded_background"/>

        <!-- Perform Task Button -->
        <TextView
            android:id="@+id/performTaskButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perform_task"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:background="@drawable/rounded_button"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Status Text -->
<!--        <TextView-->
<!--            android:id="@+id/statusText"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Status..."-->
<!--            android:layout_marginTop="16dp"-->
<!--            android:textSize="16sp"-->
<!--            android:textColor="@android:color/black"/>-->
        <Button
            android:id="@+id/btn_start_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Agent"
            android:enabled="false"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btn_stop_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop Agent"
            android:enabled="false"/>
        <TextView
            android:id="@+id/tv_service_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Service Status: Stopped"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_permission_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permission: Not Granted"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="24dp"/>
        <Button
            android:id="@+id/btn_request_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grant Accessibility Permission"
            android:layout_marginBottom="12dp"/>


    </LinearLayout>
</ScrollView>
